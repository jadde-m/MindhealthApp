<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/postscontent"
    android:background="@color/Postback"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/posttitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginRight="30dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/textcolour"/>
    <Button
        android:id="@+id/postbutton"
        app:layout_constraintLeft_toRightOf="@+id/posttitle"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="30dp"
        android:layout_height="30dp" />
    <TextView
        android:id="@+id/postauther"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/posttitle"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/postdate"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textSize="15dp"
        android:textColor="@color/textcolour"
        app:layout_constraintTop_toBottomOf="@id/postauther"/>
    <TextView
        android:id="@+id/postcontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/postdate" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/postlike"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/postcomment"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/ic_comment"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/postshare"
            android:layout_width="40dp"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
